{
    "dashboard": {
      "id": null,
      "title": "System Metrics",
      "panels": [
        {
          "type": "graph",
          "title": "CPU Usage",
          "targets": [
            {
              "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
              "format": "time_series"
            }
          ]
        },
        {
          "type": "graph",
          "title": "Memory Usage",
          "targets": [
            {
              "expr": "node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100",
              "format": "time_series"
            }
          ]
        }
      ]
    }
  }
  